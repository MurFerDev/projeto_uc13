<h1>Adicionar Produtos</h1>

<div class="container" style="max-width: 80%">
   <form action="/produtos/add" method="POST" class="mb-3 mx-auto">

        <div>
            <label for="exampleTextarea" class="form-label">Nome</label>
            <textarea class="form-control" id="exampleTextarea" name="nome" rows="1"></textarea>
        </div> 

        <div>
            <label for="exampleTextarea" class="form-label">Descrição</label>
            <textarea class="form-control" id="exampleTextarea" name="descricao" rows="3"></textarea>
        </div>

        <label class="form-label mt-4">Preço</label>
        <div class="d-inline-flex p-4 input-group mb-3">
            <span class="input-group-text">R$</span>
            <input type="text" class="form-label" aria-label="Preço do produto" aria-describedby="basic-addon1" id="preco" name="preco" value="0.00" step="0.01" pattern="\d+(\.\d{2})?" required>
        </div>

        <label for="quantidade" class="form-label">Quantidade</label>
        <div class="d-inline-flex p-4 input-group">
            <input type="number" class="form-control" id="quantidade" name="estoque" value="1" min="0" step="1" aria-label="Botão para escolher a quantidade" aria-describedby="button-addon1">
        </div>

        <div>
            <label for="categoria" class="form-label">Categoria</label>
            <select class="form-select" id="exampleSelect1"  name="categoria" aria-label="Selecione uma categoria">
                {{#each categorias}}
                <option value="{{this.id}}">{{this.nome}}</option>
                {{/each}}
            </select>
        </div>

        </fieldset>
        <button type="submit" class="btn btn-primary">Enviar</button>
        </fieldset>
    </form>
</div>


